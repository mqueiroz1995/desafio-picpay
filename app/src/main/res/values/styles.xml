<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScreenTitleTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScreenContentTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PaymentCurrencyTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDetail</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PaymentValueEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorDetail</item>
        <item name="android:textSize">54sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditTextWrapper" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorDetail</item>
        <item name="colorControlNormal">@color/colorDetail</item>
    </style>

    <style name="PicPayButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="SearchWidget" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/search_background</item>
        <item name="android:drawableLeft">@drawable/ic_search_24px</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
